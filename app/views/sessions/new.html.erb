<h4><strong>Log in</strong></h4>

<%= form_tag sessions_path do %>
    <div class="control-group">
      <%= label_tag :email %>
      <div class="controls">
        <%= text_field_tag :email,params[:email],class: 'form-control' %><br /><br />
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :password %>
      <div class="controls">
        <%= password_field_tag :password,class: 'form-control' %><br /><br />
      </div>
    </div>

    <div>
      <p class="button"><%= submit_tag %></p>
    </div>
<%end%>